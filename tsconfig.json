{
  "compilerOptions": {
    /* File Layout */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module & Target */
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* Type Declarations */
    "types": ["node"],

    /* Source Maps & Output */
    "sourceMap": true,
    "declaration": false,
    "skipLibCheck": true,

    /* Type Safety */
    "strict": true,

    /* Misc */
    "isolatedModules": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
